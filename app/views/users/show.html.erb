

<div>
  <h3>User info</h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name<%= @user.name %></p>
  <p>introduction<%= @user.introduction %></p>
</div>

<p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>

<h1>New book</h1>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>


<h2>Books</h2>
<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <%= link_to book_path(book.id) do %>
    <p><%= book.title %></p>
  <% end %>
  <p><%= book.body %></p>
</div>
<% end %>
