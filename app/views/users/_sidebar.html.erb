<div>
  <h3>User info</h3>
  <%= image_tag user.get_profile_image(100,100) %>
  <p>name<%= user.name %></p>
  <p>introduction<%= user.introduction %></p>
</div>

<p><%= link_to "プロフィール編集", edit_user_path(user.id) %></p>

<h1>New book</h1>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>