<div class="container p-0-5 p-sm-1">
  <div class="row">
    <div class="col-md-3">
      <%= render 'sidebar', user: @user %>
    </div>
    <div class="col-md-9">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody> 
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td>
              <%= link_to user_path(user.id) do %>
                Show
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    
  </div>
</div>
  