<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>error prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label class="inputName mb-2">:Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control" %>
        <label class="inputImage mt-2 d-flex flex-column">:Image
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "" %>
        </label>
        <label class="inputIntroduction mt-2">:Introduction</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class: "form-control" %>

        <div class="actions mt-3">
          <button type="submit" class="btn btn-secondary">Update User</button>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>