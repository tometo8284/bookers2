<h1>New book</h1>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Book detail</h1>
<% @books.each do |book| %>
  <div>
    <p><%= image_tag 'no_image.jpg' %></p>
    <p><%= book.user.name %></p>
    <%= link_to book_path(book.id) do %>
      <p><%= book.title %></p>
    <% end %>
    <p><%= book.body %></p>
  </div>
<% end %>
