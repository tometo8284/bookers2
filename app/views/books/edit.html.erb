<h1>Editing Book</h1>
<%= render 'validate', book: @book %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <%= link_to "Show", @book %>

  <%= link_to "Back", books_path %>
<% end %>